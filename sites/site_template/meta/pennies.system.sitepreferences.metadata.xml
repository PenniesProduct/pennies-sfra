<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
	<type-extension type-id="SitePreferences">
 		<custom-attribute-definitions>
            <attribute-definition attribute-id="penniesTestAccount">
                <display-name xml:lang="x-default">Pennies Test Accounts</display-name>
                <description xml:lang="x-default">Pre-defined test accounts for testing, selecting an option will override details below</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">Top Up Fixed Value</display>
                        <value>TEST1</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Round Up</display>
                        <value>TEST2</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Flexi Round Up</display>
                        <value>TEST3</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Banded - Multiple Amounts</display>
                        <value>TEST4</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Round Up With Minimum Basket</display>
                        <value>TEST4</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
 			<attribute-definition attribute-id="penniesAccessToken">
                <display-name xml:lang="x-default">Pennies Access Token</display-name>
                <description xml:lang="x-default">Pennies Access Token</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="penniesDonationIntegrationEnabled">
                <display-name xml:lang="x-default">Pennies Donation Integration Enabled</display-name>
                <description xml:lang="x-default">Pennies Donation Integration Enabled</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="penniesMerchantID">
                <display-name xml:lang="x-default">Pennies Merchant ID</display-name>
                <description xml:lang="x-default">Pennies Merchant ID</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="penniesCalculationServiceDelay">
                <display-name xml:lang="x-default">Enter integer time in milli seconds to cause detay in the test API for checkout pennies widget e.g (enter 2000 for 2 seconds delay)</display-name>
                <type>int</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-value>0.0</min-value>
                <default-value>0</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
    	<group-definitions>
    		<attribute-group group-id="Pennies">
                <display-name xml:lang="x-default">Pennies</display-name>
                <attribute attribute-id="penniesTestAccount"/>
                <attribute attribute-id="penniesAccessToken"/>
                <attribute attribute-id="penniesDonationIntegrationEnabled"/>
                <attribute attribute-id="penniesMerchantID"/>
                <attribute attribute-id="penniesCalculationServiceDelay"/>
            </attribute-group>
    	</group-definitions>
    </type-extension>
</metadata>